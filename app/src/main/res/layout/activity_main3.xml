<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.engmohamedelmahgou.calc.Main2Activity"
    android:layout_marginRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/e1"
                    android:textAlignment="center"
                    android:inputType="numberDecimal" />

                <TextView
                    android:text="المبلغ الكلي"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/m1"
                    android:textSize="24sp"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textAlignment="center"
                    android:layout_marginRight="40dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/e3"
                    android:textAlignment="center"
                    android:inputType="numberDecimal" />

                <TextView
                    android:text="قيمة الفائدة"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/m3"
                    android:textSize="24sp"
                    android:textColor="@color/colorAccent"
                    android:textAlignment="center"
                    android:layout_marginRight="40dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/e4"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    android:inputType="numberDecimal" />

                <TextView
                    android:text="عدد السنوات"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/m4"
                    android:textSize="24sp"
                    android:textColor="@color/colorAccent"
                    android:textAlignment="center"
                    android:layout_marginRight="40dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal">

                <Button
                    android:text="احـــــــــســــــــب"
                    android:layout_span="2"
                    android:layout_height="wrap_content"
                    android:onClick="Calc"
                    android:background="@android:drawable/toast_frame"
                    android:textAlignment="center"
                    android:layout_marginTop="16dp"
                    android:textSize="30sp"
                    android:layout_marginBottom="16dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t1"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginTop="@dimen/activity_horizontal_margin" />

                <TextView
                    android:text="قيمة القسط الشهري"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/m11"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textAllCaps="true"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="@dimen/activity_horizontal_margin" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t2"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginTop="@dimen/activity_horizontal_margin" />

                <TextView
                    android:text="اجمالي المبلغ"
                    android:layout_width="wrap_content"
                    android:id="@+id/m22"
                    android:textSize="24sp"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="@dimen/activity_horizontal_margin" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t3" />

                <TextView
                    android:text="المقدم المدفوع"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/m2"
                    android:textSize="24sp"
                    android:textColor="@color/colorAccent"
                    android:textAlignment="center"
                    android:layout_marginRight="40dp" />
            </TableRow>

        </TableLayout>
    </LinearLayout>
</RelativeLayout>
